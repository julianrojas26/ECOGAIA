<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/Verde1"
            >


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_launcher_foreground"
                android:layout_gravity="center"
                android:background="@color/Verde1"
                >

            </ImageView>
        </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/sales"
                android:text="ofertas"
                android:textColor="@color/White"
                android:textAlignment="center"
                android:textSize="50dp"
                >

            </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:padding="15dp">
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/boxes"
                android:padding="15dp"
                android:layout_marginLeft="2dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aceite esencial de Citronela"
                    android:textAlignment="center">

                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    >

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Verde2"
                    android:text="Info"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_gravity="center"
                    >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/boxes"
                android:padding="15dp"
                android:layout_marginLeft="18dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aceite esencial de Citronela"
                    android:textAlignment="center">

                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    >

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Azulito"
                    android:text="Info"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"
                    >

                </TextView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            >
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/boxes"
                android:padding="15dp"
                android:layout_marginLeft="2dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aceite esencial de Citronela"
                    android:textAlignment="center">

                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    >

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Azulito"
                    android:text="Info"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:layout_gravity="center"
                    >

                </TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:background="@drawable/boxes"
                android:padding="15dp"
                android:layout_marginLeft="18dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aceite esencial de Citronela"
                    android:textAlignment="center">

                </TextView>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_launcher_foreground"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    >

                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/Azulito"
                    android:text="Info"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:layout_gravity="center"
                    >

                </TextView>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>